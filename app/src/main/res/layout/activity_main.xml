<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.learning.naveen.broadcastreceivers.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BROADCAST RECEIVERS"
        android:gravity="center_horizontal"
        android:textSize="25sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/broadcast_message"
        android:text="Broadcast"
        android:onClick="broadcastIntent"
        android:layout_marginTop="150sp"
        android:textSize="20sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="De-Register"
        android:id="@+id/button"
        android:onClick="deregister"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re-Register"
        android:id="@+id/button1"
        android:onClick="reregister"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Broadcast to New App"
        android:id="@+id/button2"
        android:onClick="broadcastIntent2"
        android:textSize="20sp"
        android:layout_marginTop="20sp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
